                android:name="android.support.PARENT_ACTIVITY"
                android:value="tk.agarsia.tictac2.view.activities.MenuActivity" />
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.activities.GameActivity"
            android:label="@string/app_name"
            android:parentActivityName="tk.agarsia.tictac2.view.activities.PauseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tk.agarsia.tictac2.view.activities.PauseActivity" />
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.activities.PauseActivity"
            android:label="@string/app_name"
            android:parentActivityName="tk.agarsia.tictac2.view.activities.GameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tk.agarsia.tictac2.view.activities.GameActivity" />
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.Options"
            android:label="@string/app_name"
       		android:parentActivityName="tk.agarsia.tictac2.view.activities.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tk.agarsia.tictac2.view.activities.MenuActivity" />
