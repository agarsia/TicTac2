<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.agarsia.tictac2"
    android:debuggable="true"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="tk.agarsia.tictac2.view.activities.TicTac2"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.activities.MenuActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.activities.OptActivity"
            android:label="@string/app_name"
            android:parentActivityName="tk.agarsia.tictac2.view.activities.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tk.agarsia.tictac2.view.activities.MenuActivity" />
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.activities.MultiNameActivity"
            android:label="@string/app_name"
