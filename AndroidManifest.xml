<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.agarsia.tictac2"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="tk.agarsia.tictac2.view.activities.TicTac2"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.activities.MenuActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.activities.OptActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.activities.MultiNameActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.activities.GameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.activities.PauseActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="tk.agarsia.tictac2.view.Options"
            android:label="@string/app_name" >
        </activity>
    </application>
</manifest>