<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tictac2"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.tictac2.view.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tictac2.view.MenuActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.tictac2.view.OptActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.tictac2.view.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tictac2.view.MenuActivity" />
        </activity>
        <activity
            android:name="com.tictac2.view.MultiNameActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.tictac2.view.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tictac2.view.MenuActivity" />
        </activity>
        <activity
            android:name="com.tictac2.view.GameActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.tictac2.view.PauseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tictac2.view.PauseActivity" />
        </activity>
        <activity
            android:name="com.tictac2.view.PauseActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.tictac2.view.GameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tictac2.view.GameActivity" />
        </activity>
        <activity
            android:name="com.tictac2.view.Options"
            android:label="@string/app_name"
            android:parentActivityName="com.tictac2.view.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tictac2.view.MenuActivity" />
        </activity>
    </application>

</manifest>